<Page x:ConnectionId='1'
    x:Class="Math_Quiz.Pages.HubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Math_Quiz.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="6*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='2'
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="50"
                                  />

        <ListView x:ConnectionId='3'
            x:Name="ResultsView"
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
                                          
            Header="Previous Results"
                                          >
            <ListView.ItemTemplate>
                <DataTemplate x:Name="Template"                          >
                    <StackPanel x:ConnectionId='5' HorizontalAlignment="Stretch" Orientation="Horizontal">
                        <SymbolIcon Symbol="Add" />
                        <TextBlock x:ConnectionId='6'
                            HorizontalAlignment="Center"
                            FontSize="50"
                                                       />
                        <TextBlock x:ConnectionId='7'
                            HorizontalAlignment="Right"
                            FontSize="50"
                                                       />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

